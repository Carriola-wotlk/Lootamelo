<Ui xmlns="http://www.blizzard.com/wow/ui/">
	<Frame name="Lootamelo_SettingsFrame" parent="Lootamelo_MainFrame">
		<Size x="512" y="410"/>
		<Anchors>
			<Anchor point="CENTER">
				<Offset x="0" y="-30"/>
			</Anchor>
		</Anchors>
		<Frames>
			<Button name="$parentLanguage" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPRIGHT">
                        <Offset x="-10" y="-30"/>
                    </Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" inherits="GameFontNormal" wraponspaces="false" justifyH="LEFT" text="Addon language">
							<Anchors>
								<Anchor point="TOP">
									<Offset x="8" y="15"/>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_Initialize(self, Lootamelo_SettingsFrameInitDropDown)
						UIDropDownMenu_SetText(self, "English")
						UIDropDownMenu_SetWidth(self, 100)
					</OnLoad>
				</Scripts>
			</Button>
			<CheckButton name="$parentAutoMasterLoot" inherits="OptionsCheckButtonTemplate">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="20" y="-70"/>
                    </Anchor>
                </Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentTextFirstRow" inherits="GameFontNormal" wrap="true" wraponspaces="false" justifyH="LEFT" text="Auto set Master Loot when the boss's health is below">
							<Anchors>
								<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parent">
									<Offset x="3" y="5"/>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parentTextSecondRow" inherits="GameFontNormal" wrap="true" wraponspaces="false" justifyH="LEFT" text="(Master Looter role will be assigned to the Raid Leader)">
							<Anchors>
								<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parent">
									<Offset x="3" y="-7"/>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
                <Scripts>
                    <OnClick>
                        if self:GetChecked() then
                            _G[LOOTAMELO_NAME].Settings.SetAutoMasterLoot(true)
                        else
                            _G[LOOTAMELO_NAME].Settings.SetAutoMasterLoot(false)
                        end
                    </OnClick>
                </Scripts>
			</CheckButton>
			<Button name="$parentAutoMasterLootHP" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPRIGHT">
                        <Offset x="-50" y="-68"/>
                    </Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_Initialize(self, Lootamelo_SettingsFrameInitDropDown)
						UIDropDownMenu_SetText(self, "35%")
						UIDropDownMenu_SetWidth(self, 50)
					</OnLoad>
				</Scripts>
			</Button>
			<CheckButton name="$parentAlertMasterLoot" inherits="OptionsCheckButtonTemplate">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="20" y="-100"/>
                    </Anchor>
                </Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" inherits="GameFontNormal" wraponspaces="false" justifyH="LEFT" text="Warn to set Master Loot when the boss's health is below">
							<Anchors>
								<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parent">
									<Offset x="3" y="0"/>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
                <Scripts>
                    <OnClick>
                        if self:GetChecked() then
                            print("Feature Enabled");
                        else
                            print("Feature Disabled");
                        end
                    </OnClick>
                </Scripts>
			</CheckButton>
			<Button name="$parentAlertMasterLootHP" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPRIGHT">
                        <Offset x="-45" y="-100"/>
                    </Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_Initialize(self, Lootamelo_SettingsFrameInitDropDown)
						UIDropDownMenu_SetText(self, "35%")
						UIDropDownMenu_SetWidth(self, 50)
					</OnLoad>
				</Scripts>
			</Button>
			<CheckButton name="$parentOpenLootPanel" inherits="OptionsCheckButtonTemplate">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="20" y="-130"/>
                    </Anchor>
                </Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" inherits="GameFontNormal" wraponspaces="false" justifyH="LEFT" text="Open loot panel when raid Master Looter loot boss">
							<Anchors>
								<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parent">
									<Offset x="3" y="0"/>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
                <Scripts>
                    <OnClick>
                        if self:GetChecked() then
                            print("Feature Enabled");
                        else
                            print("Feature Disabled");
                        end
                    </OnClick>
                </Scripts>
			</CheckButton>
			<CheckButton name="$parentOpenRollPanel" inherits="OptionsCheckButtonTemplate">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="20" y="-160"/>
                    </Anchor>
                </Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" inherits="GameFontNormal" wraponspaces="false" justifyH="LEFT" text="Open roll panel when raid Master Looter announce roll">
							<Anchors>
								<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parent">
									<Offset x="3" y="0"/>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
                <Scripts>
                    <OnClick>
                        if self:GetChecked() then
                            print("Feature Enabled");
                        else
                            print("Feature Disabled");
                        end
                    </OnClick>
                </Scripts>
			</CheckButton>
		</Frames>
	</Frame>
</Ui>
