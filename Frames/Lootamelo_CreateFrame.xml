<Ui xmlns="http://www.blizzard.com/wow/ui/">
	<Frame name="Lootamelo_CreateFrame" parent="Lootamelo_MainFrame">
		<Size x="512" y="410"/>
		<Anchors>
			<Anchor point="CENTER">
				<Offset x="0" y="-30"/>
			</Anchor>
		</Anchors>
		<Frames>
			<Button name="$parentDropDownButton" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset x="-155" y="-28"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_Initialize(self, Lootamelo_CreateFrameInitDropDown)
						UIDropDownMenu_SetText(self, "Pippo")
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="$parentCreateButton" inherits="UIPanelButtonTemplate" enableMouse="true">
                <Size x="80" y="30"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset x="-40" y="0"/>
                    </Anchor>
                </Anchors>
                <Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" inherits="GameFontNormal" wraponspaces="false" justifyH="CENTER" text="Create" />
					</Layer>
				</Layers>
            </Button>
			<Button name="$parentCancelButton" inherits="UIPanelButtonTemplate" enableMouse="true">
                <Size x="80" y="30"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset x="-130" y="0"/>
                    </Anchor>
                </Anchors>
                <Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" inherits="GameFontNormal" wraponspaces="false" justifyH="CENTER" text="Cancel" />
					</Layer>
				</Layers>
            </Button>
		</Frames>
	</Frame>
</Ui>
