<Ui xmlns="http://www.blizzard.com/wow/ui/">

	<Frame name="Lootamelo_LootFrame" parent="Lootamelo_MainFrame" hidden="true">
		<Size x="512" y="410"/>
		<Anchors>
			<Anchor point="TOP">
				<Offset x="0" y="-80"/>
			</Anchor>
		</Anchors>
		<Frames>
			<Button name="$parentNextButton" inherits="UIPanelButtonTemplate">
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-20" y="10"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						Lootamelo_NextPage()
					</OnClick>
				</Scripts>
				<Size x="20" y="20"/>
			</Button>
			<Button name="$parentPreviousButton" inherits="UIPanelButtonTemplate">
				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset x="20" y="10"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						Lootamelo_PreviousPage()
					</OnClick>
				</Scripts>
				<Size x="20" y="20"/>
			</Button>
			<Button name="$parentDropDownButton" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset x="-30" y="-15"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_SetWidth(self, 230)
					</OnLoad>
				</Scripts>
			</Button>
		</Frames>
	</Frame>
    
</Ui>
