			<Anchor point="TOP">
				<Offset x="0" y="-80"/>
			</Anchor>
		</Anchors>
		<Frames>
			<Button name="$parentDropDownButton" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset x="-30" y="-30"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_Initialize(self, Lootamelo_LootFrameInitDropDown)
