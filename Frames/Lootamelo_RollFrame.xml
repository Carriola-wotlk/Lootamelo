<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns="http://www.blizzard.com/wow/ui/">
	<Frame name="Lootamelo_RollFrame" toplevel="true" parent="UIParent" enableMouse="true" movable="true">
		<Size x="256" y="256"/>
		<Anchors>
			<Anchor point="RIGHT" relativePoint="RIGHT" relativeTo="UIParent">
				<Offset x="-400" y="150"/>
			</Anchor>
		</Anchors>

		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\AddOns\Lootamelo\Texture\frames\roll">
					<Size x="256" y="256"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
			<FontString name="Lootamelo_Addon_Title" parentKey="title" inherits="GameFontNormal" text="Lootamelo">
					<Anchors>
						<Anchor point="TOP">
							<Offset x="0" y="-4"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<Button inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="5" y="6"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick function="Lootamelo_CloseMainFrame"/>
				</Scripts>
			</Button>
			<Button name="$parentRollButton" inherits="UIPanelButtonTemplate" enableMouse="true">
                <Size x="60" y="25"/>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset x="0" y="10"/>
                    </Anchor>
                </Anchors>
                <Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" inherits="GameFontNormal" wraponspaces="false" justifyH="CENTER" text="Roll" />
					</Layer>
				</Layers>
				<Scripts>
					<OnClick function="Lootamelo_CreateNewRun"/>
				</Scripts>
            </Button>
		</Frames>

		<Scripts>
			<OnMouseDown>
				Lootamelo_RollFrame:StartMoving();
			</OnMouseDown>
			<OnMouseUp>
				Lootamelo_RollFrame:StopMovingOrSizing();
			</OnMouseUp>
		</Scripts>
	</Frame>
</Ui>
