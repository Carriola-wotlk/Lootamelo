<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Button name="Lootamelo_NavButtonTemplate" virtual="true">
		<Size>
			<AbsDimension x="128" y="32"/>
		</Size>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentText" parentKey="title" inherits="GameFontNormal" wraponspaces="false" justifyH="CENTER" >
                    <Anchors>
						<Anchor point="CENTER">
							<Offset x="0" y="-5"/>
						</Anchor>
					</Anchors>
                </FontString>
			</Layer>
		</Layers>
		<NormalTexture name="$parentNormalTexture" file="Interface\AddOns\Lootamelo\Texture\buttons\nav-button-normal">
			<Size>
				<AbsDimension x="128" y="32"/>
			</Size>
			<Anchors>
				<Anchor point="CENTER" />
			</Anchors>
		</NormalTexture>
		<PushedTexture file="Interface\AddOns\Lootamelo\Texture\buttons\nav-button-press">
			<Size>
				<AbsDimension x="128" y="32"/>
			</Size>
		</PushedTexture>
		<Scripts>
			<OnClick function="Lootamelo_NavButtonOnClick"/>
		</Scripts>
	</Button>
</Ui>

