<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns="http://www.blizzard.com/wow/ui/">

	<Frame name="Lootamelo_Main_Frame" toplevel="true" parent="UIParent" enableMouse="true" movable="true" hidden="true">
		<Size x="512" y="512"/>
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER" relativeTo="UIParent">
				<Offset x="0" y="130"/>
			</Anchor>
		</Anchors>

		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\AddOns\Lootamelo\texture\frames\config">
					<Size x="512" y="512"/>
				</Texture>
			</Layer>

			<Layer level="OVERLAY">
				<FontString name="Lootamelo_Addon_Version" parentKey="title" inherits="GameFontNormal" text="by Carriola - Server ChromieCraft">
					<Anchors>
						<Anchor point="BOTTOM">
							<Offset x="0" y="65"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<Button name="Lootamelo_Button" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-3" y="-3"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick function="Lootamelo_CloseMainFrame"/>
				</Scripts>
			</Button>

			
			<Frame name="Lootamelo_Create_Frame">
				<Size x="512" y="512"/>
				<Anchors>
					<Anchor point="CENTER">
						<Offset x="75" y="0"/>
					</Anchor>
				</Anchors>
				<Frames>
					<Button name="Lootamelo_Create_Raids_DropDownButton" inherits="UIDropDownMenuTemplate">
						<Size x="150" y="30"/>
						<Anchors>
							<Anchor point="TOP">
								<Offset x="-7" y="-100"/>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnLoad>
								UIDropDownMenu_Initialize(self, Lootamelo_Create_Raids_InitDropDown)
								UIDropDownMenu_SetText(self, "Raids")
							</OnLoad>
						</Scripts>
					</Button>
				</Frames>

			</Frame>

			<Frame name="Lootamelo_Raid_Frame">
				<Size x="512" y="512"/>
				<Anchors>
					<Anchor point="CENTER" />
				</Anchors>
				<Frames>
					<Button name="Lootamelo_Raid_Items_DropDownButton" inherits="UIDropDownMenuTemplate">
						<Size x="150" y="30"/>
						<Anchors>
							<Anchor point="TOP">
								<Offset x="80" y="-80"/>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnLoad>
								UIDropDownMenu_Initialize(self, Lootamelo_Raid_Items_InitDropDown)
								UIDropDownMenu_SetText(self, "Items reserved")
							</OnLoad>
						</Scripts>
					</Button>
					<Frame name="Lootamelo_Raid_General_Frame">
						<Size x="512" y="256"/>
						<Anchors>
							<Anchor point="CENTER">
								<Offset x="75" y="-40"/>
							</Anchor>
						</Anchors>
					</Frame>
					<Frame name="Lootamelo_Raid_Item_Frame">
						<Size x="512" y="256"/>
						<Anchors>
							<Anchor point="CENTER">
								<Offset x="75" y="0"/>
							</Anchor>
						</Anchors>
					</Frame>
				</Frames>

			</Frame>

		</Frames>

		<Scripts>
			<OnMouseDown>
				Lootamelo_Main_Frame:StartMoving();
			</OnMouseDown>
			<OnMouseUp>
				Lootamelo_Main_Frame:StopMovingOrSizing();
			</OnMouseUp>
		</Scripts>
	</Frame>

</Ui>